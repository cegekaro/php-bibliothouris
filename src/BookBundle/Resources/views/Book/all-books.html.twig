    <table class="table table-bordered table-responsive content-table">
        <thead>
        <tr>
            <th>ISBN</th>
            <th>Title</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
        </thead>

        <tbody>
        {% for index in 1..10 %}
            {% include '@Book/Book/_book-row.html.twig' with {
            "isbn": "000.000.001",
            "title": "Book Title",
            "firstName": "Daniela",
            "lastName": "Cruceanu"
            } %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
